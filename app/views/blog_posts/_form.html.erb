<%= form_with model: blog_post do|form|%>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %>
        <% form.object.errors.full_messages_for(:title).each do |message| %>
            <%= message %>
        <% end %>
    </div>

    <div>
        <%= form.label :body%>
        <%= form.text_area :body %>
        <% form.object.errors.full_messages_for(:body).each do |message| %>
            <%= message %>
        <% end %>
    </div>

    <%= form.submit %>
<% end %>