<h1>Blog Posts</h1>

<% @blog_posts.each do|blog_post| %>
    <div class="border rounded-md mb-2 shadow-md">
        <% if blog_post.draft? %>
            <div class="bg-gray-100 py-1 pl-2 rounded text-gray-500 text-lg">Draft</div>
        <% elsif blog_post.scheduled? %>
            <div class="bg-blue-100 py-1 pl-2 rounded text-blue-500 text-lg">Scheduled</div>
        <% end %>
        <h2> <%= link_to blog_post.title, blog_post %> </h2>
    </div>
<% end %>

<%# Render a view helper in your views (skipping nav links for empty pages) %>
<div class="pt-5 pb-16">
    <%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>